<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etSearchChapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/search_view_corners"
            android:drawableStart="@drawable/ic_search_accent"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="@string/action_search_by_chapters"
            android:inputType="text"
            android:padding="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMainChapters"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarThumbVertical="@drawable/thumb_line_background"
            android:scrollbars="vertical" />
    </LinearLayout>
</layout>